<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
>
    <testsuites>
        <testsuite name="Test Suite">
            <directory suffix="Test.php">./tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src/</directory>

            <exclude>
                <directory suffix=".php">./src/*/*/resources</directory>
                <directory suffix=".php">./src/*/*/factories</directory>
            </exclude>
        </whitelist>
    </filter>
    <php>
        <env name="APP_KEY" value="base64:aYWlZmotmdYnjvN9AAhDXSBl7Vo6RkZCu7eJ9pYJyt8="/>
        <env name="APP_ENV" value="testing"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="TENANCY_MYSQL_HOST" value="tenancy_db"/>
        <env name="TENANCY_DB" value="testing"/>
        <env name="TENANCY_USERNAME" value="testing"/>
        <env name="TENANCY_PASSWORD" value="testing"/>

        <env name="TENANCY_MYSQL_HOST" value="mysql"/>
        <env name="TENANCY_MYSQL_PORT" value="3306"/>
        <env name="TENANCY_MYSQL_DB" value="default"/>
        <env name="TENANCY_MYSQL_USERNAME" value="root"/>
        <env name="TENANCY_MYSQL_PASSWORD" value="root"/>

        <env name="TENANCY_MARIADB_HOST" value="mariadb"/>
        <env name="TENANCY_MARIADB_PORT" value="3306"/>
        <env name="TENANCY_MARIADB_DB" value="default"/>
        <env name="TENANCY_MARIADB_USERNAME" value="default"/>
        <env name="TENANCY_MARIADB_PASSWORD" value="secret"/>

        <env name="TENANCY_POSTGRES_HOST" value="postgres"/>
        <env name="TENANCY_POSTGRES_PORT" value="5432"/>
        <env name="TENANCY_POSTGRES_DB" value="default"/>
        <env name="TENANCY_POSTGRES_USERNAME" value="default"/>
        <env name="TENANCY_POSTGRES_PASSWORD" value="secret"/>

        <env name="TENANCY_MSSQL_HOST" value="mssql"/>
        <env name="TENANCY_MSSQL_PORT" value="1433"/>
        <env name="TENANCY_MSSQL_DB" value="master"/>
